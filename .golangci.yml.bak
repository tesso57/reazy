run:
  timeout: 5m
  tests: true

linters:
  disable-all: true
  enable:
    - errcheck
    - gosimple
    - govet
    - ineffassign
    - staticcheck
    - unused
    - gofmt
    - goimports
    - revive
    - misspell
    - typecheck
    - gocritic
    - gosec
    - prealloc
    - unconvert
    - unparam

linters-settings:
  govet:
    enable:
      - nilness
      - shadow
  goimports:
    local-prefixes: github.com/tesso57/reazy
  revive:
    rules:
      - name: exported
        severity: warning
      - name: package-comments
        severity: warning
  gocritic:
    enabled-tags:
      - diagnostic
      - experimental
      - opinionated
      - performance
      - style
    disabled-checks:
      - whyNoLint

issues:
  exclude-rules:
    - path: _test\.go
      linters:
        - errcheck
        - dupl
        - gosec
        - funlen
        - gognit
        - gocyclo
